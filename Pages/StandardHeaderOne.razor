@page "/standard_header_one"

<style>
    #child-content {
        color: ghostwhite;
        width: 100%;
        padding: 0;
        margin: 0;
        text-align: left;

    }

    #h-one-container {
        width: 70%;
        padding: 0;
        margin: 0;
        padding-top: 20px !important;
        padding-bottom: 20px !important;
    }

    .underline {
        content: "";
        background-color: ghostwhite;
        height: 1px;
        display: block;
        position: relative;
        background: linear-gradient(to left, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
    }

    @@media(max-width: 920px) {
        #h-one-container {
            width: 100%;
            margin-left: auto;
            margin-right: auto;
        }

        #child-content {
            text-align: center;
            font-size: 22pt;
        }

        .underline {
            display: none;
        }
    }
</style>

<div id="h-one-container">
    <h1 id="child-content">@ChildContent</h1>

    @if (Underlined == true)
    {
        <div class="underline"></div>
    }
</div>


@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool Underlined { get; set; } = false;
}