@page "/youtube_video_list"

@using MarathonTutorialWebsite.Data
@using System.Text.Encodings.Web
@inject YoutubeVideoService youtubeVideoService
@inject NavigationManager navMan
@inject IStringLocalizer<App> localizer

@if (videos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div id="ytvl-container">
        <table class="table">
            <thead>
                <tr>
                    <th>@localizer["TVL_Title"]</th>
                    <th>@localizer["TVL_Description"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in videos)
                {
                    <tr>
                        <td>
                            <a class="tvl-video-entry" href="" @onclick="() => GoToVideoPage(v.Title, v.VideoUrl)"
                        @onclick:preventDefault>
                                @v.Title
                            </a>
                        </td>
                        <td>@v.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private YoutubeVideoEntry[] videos;

    protected override void OnInitialized()
    {
        videos = youtubeVideoService.GetEntries();
    }

    private void GoToVideoPage(string title, string link)
    {
        var url = "/tutorial_video/" + title + "/" + UrlEncoder.Create().Encode(link);
        navMan.NavigateTo(url);
    }
}
