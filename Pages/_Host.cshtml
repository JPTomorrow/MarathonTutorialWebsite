@page "/"
@namespace MarathonTutorialWebsite.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marathon Tutorial Website</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="MarathonTutorialWebsite.styles.css" rel="stylesheet" />
</head>

<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="http://www.youtube.com/player_api"></script>

    <!-- TODO - This code should be in TutorialVideo.razor but if cant be because of js fuckyness. Check back in the future if there is a solution to this and do it. -->
    <script>
        window.thisAppFunctions =
        {
            EnableTestFormButton: function () {
                alert("setting handle");
                var video = document.getElementById("tvp-video");
                var button = document.getElementById("tvp-test-btn");

                video.addEventListener("ended", function () {
                    alert("enabling video");
                    button.disabled = false;
                }, true);

            }
        }
    </script>
</body>

</html>
